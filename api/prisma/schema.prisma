datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  name          String
  listElements  ListElement[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Content {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  type          ContentTypes
  genre         String
  description   String
  director      String
  year          String
  rating        Float
  ListElements  ListElement[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum ContentTypes {
  MOVIE
  SERIES
}

model ListElement {
  id            Int      @id @default(autoincrement())
  listType      ListTypes
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  content       Content  @relation(fields: [contentId], references: [id])
  contentId     Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, listType, contentId])
}

enum ListTypes {
  WATCHLIST
  IN_PROGRESS
  COMPLETED
  FAVORITES
}